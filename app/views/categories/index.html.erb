<nav>
  <ul class="nav-bar">
    <li>
      <%= link_to '<', root_path, class: "link back" %>
    </li>
    <li>
      <h1>Categories</h1>
    </li>
    <li>
      <%= button_to 'LOG OUT', destroy_user_session_path, method: :delete, class: "logout-btn" %>
    </li>
  </ul>
</nav>
<div class='cards'>
  <% @categories.each do |category| %>
  <%= link_to category_path(category),class:'link cat-item' do %>
    <div class="item">
      <div class='spec one'>
         <%= image_tag "#{category.icon}.png", style: 'height:40px; width:auto;' %> 
      </div>

      <div class='spec two'>
        <p><%= category.name %></p>
        <span><%= category.created_at.strftime("%Y/%m/%d") %></span>
      </div>

      <div class='spec'>
        <div>
          <p>Total: $<%= category.payments.sum(:amount)%></p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

</div>
<div class="add-category">
  <%= link_to "Add New Category", new_category_path, class: "add-btn" %>
</div>

