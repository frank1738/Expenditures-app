<nav class="bar">
  <ul class="nav-bar">
    <li>
      <%= link_to '<', new_registration_path(resource_name), class: "link back" %>
    </li>
    <li>
      <h2>LOGIN</h2>
    </li>
    <li>
      <i>Log in</i>
    </li>
  </ul>
</nav>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "input email" %>
  </div>
  
  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password(6 characters)", class: "input" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="check-field">
      <%= f.check_box :remember_me, class: 'check' %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'submit-login' %>
  </div>
<% end %>
